<%= tw_form_with model: link do |form| %>
  <%= form.hidden_field :origin_id, value: origin_id %>
  <%= tag.fieldset class: "grid grid-cols-1 md:grid-cols-2 md:gap-x-6 mt-6" do %>
    <%= tag.div class: "" do %>
      <%= form.text_input :title, autofocus: true %>
    <% end %>
    <%= tag.div class: "" do %>
      <%= form.label :target_id, class: "block mt-6 mb-3 text-xl lg:text-sm font-medium text-gray-700" %>
      <%= render "shared/search/index", source_id: book_id, search_id: SecureRandom.hex(5), collection: :scenes, field_name: "link[target_id]", multi: false, search_placeholder: t("links.scene_search"), selected: [] %>
    <% end %>
  <% end %>
  <%= tag.fieldset class: "mt-6 flex justify-end items-center gap-x-8" do %>
    <%= link_to t("cancel"), books_path, class: "cancel-link" %>
    <%= form.submit t("links.save"), class: "edit-link" %>
  <% end %>
<% end %>
