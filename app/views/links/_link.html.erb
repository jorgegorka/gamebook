<%= tag.li class: "grid grid-cols-3 p-4" do %>
  <%= tag.p link.title, class: "col-span-1" %>
  <%= tag.p link.target.title, class: "col-span-1" %>
  <%= tag.div class: "col-span-1" do %>
    <%= link_to t("delete"), link_path(link), method: :delete, data: { confirm: t("are_you_sure") }, class: "delete-link" %>
  <% end %>
<% end %>
