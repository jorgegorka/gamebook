<% count = @book.chapters.count %>
<%= render "shared/section_header", title: @book.title do %>
  <%= link_to t("chapters.new"), new_book_chapter_path(@book), class: "new-link" %>
<% end %>
<%= tag.p "#{count} #{t("books.chapters", count:)}", class: "text-slate-500" %>
<%= tag.ul class: "mt-10 divide-y divide-slate-100" do %>
  <%= tag.li class: "grid grid-cols-4 p-4" do %>
    <%= tag.p t("chapters.title"), class: "col-span-2" %>
    <%= tag.p t("scenes.title"), class: "col-span-1" %>
    <%= tag.div class: "col-span-1" %>
  <% end %>
  <%= render @book.chapters, book: @book %>
<% end %>
