<%= tag.div class: "fixed bottom-0 md:top-0 md:m-8 h-20 z-50 left-1/2 -translate-x-1/2", data: { controller: "notice", "notice-show-class": "fixed", "notice-hide-class": "hidden" } do %>
  <%= tag.div class: "py-2 px-4 items-center leading-none lg:rounded-full flex lg:inline-flex #{banner_type(type)}", role: "alert" do %>
