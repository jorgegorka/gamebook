<%= tw_form_with model: [chapter, scene] do |form| %>
  <%= tag.fieldset class: "" do %>
    <%= form.label :status, class: "block mt-6 mb-3 text-xl lg:text-sm font-medium text-gray-700" %>
    <%= form.collection_select_input :status, chapter_statuses_for_select, :first, :last %>
  <% end %>
  <%= tag.fieldset class: "mt-6" do %>
    <%= form.label :body %>
    <%= form.marksmith :body %>
  <% end %>
  <%= tag.fieldset class: "mt-6" do %>
    <%= form.label :notes %>
    <%= form.marksmith :notes %>
  <% end %>
  <%= tag.fieldset class: "mt-6 flex justify-end items-center gap-x-8" do %>
    <%= link_to t("cancel"), books_path, class: "cancel-link" %>
    <%= form.submit t("chapters.save"), class: "edit-link" %>
  <% end %>
<% end %>
