<%= tag.li class: "grid grid-cols-4 p-4" do %>
  <%= tag.div class: "col-span-2" do %>
    <%= link_to truncate(scene.body), chapter_scene_path(chapter, scene), class: "text-link" %>
  <% end %>
  <%= tag.div class: "col-span-1" do %>
    <%= scene.any_links? %>
  <% end %>
  <%= tag.div class: "col-span-1" do %>
    <%= link_to t("edit"), edit_chapter_scene_path(chapter, scene), class: "edit-link" %>
    <%= link_to t("delete"), chapter_scene_path(chapter, scene), method: :delete, data: { confirm: t("are_you_sure") }, class: "delete-link" %>
  <% end %>
<% end %>
